---
import "../styles/global.css"
import Navbar from "../components/Navbar.svelte"
import Foot from "../components/Footer.astro"
const {title} = Astro.props
const {description} = Astro.props
---

<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Dietrich Poensgen" />
    <meta name="description" content="{description}" />
    <meta name="theme-color" content="#EFF6FF" />
    <link rel="manifest" href="/manifest.json" />
    <link rel="icon" type="image/x-icon" href="/icon.png" />
    <link rel="apple-touch-icon" href="/icons/apple-touch-icon.png" />

    <title>{title} - Fluffy Limonadenfabrik</title>
  </head>
  <!--TODO: add darkmode-->
  <body class="bg-blue-50">
    <noscript
      >Bitte aktivieren sie JavaScript um diese Webseite nutzen zu
      k√∂nnen.</noscript
    >
    <Navbar client:load />
    <div class="grid w-full">
      <main
        class="
          grid
          w-5/6
          max-w-full
          min-h-screen
          pb-5
          overflow-visible
          p-43
          md:w-3/4
          place-self-center
        "
      >
        <slot />
      </main>
    </div>
    <Foot />
  </body>
</html>
