---
import BaseLayout from "./BaseLayout.astro"
const {content} = Astro.props
---

<BaseLayout title="{content.title}" description="{content.description}">
  <figure
    class="
      grid grid-cols-1
      p-1
      mb-3
      md:grid-cols-2
      place-content-end
      md:mb-6
      lg:mb-8
      xl:mb-8
    "
  >
    <img
      src="{content.image}"
      alt="{content.title}"
      class="h-auto max-w-full p-2 max-h-96"
    />
    <section class="grid items-center grid-cols-3 place-content-end">
      <h1
        class="
          col-span-2
          pb-2
          text-xl text-bluegray-800
          dark:text-bluegray-100
          sm:text-2xl
          md:text-3xl
          font-branch
          lg:text-4xl
          xl:text-5xl
          2xl:text-6xl
        "
      >
        {content.title}
      </h1>
      <span
        class="text-xl xl:text-2xl fontt-medium text-lemon-500 font-kyivsans"
        >{content.price} â‚¬</span
      >
    </section>
  </figure>

  <div class="prose md:prose-lg xl:prose-xl dark:prose-dark font-kyivsans">
    <slot />
  </div>
</BaseLayout>
